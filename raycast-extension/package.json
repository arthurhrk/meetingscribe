{
    "$schema":  "https://www.raycast.com/schemas/extension.json",
    "name":  "meetingscribe",
    "title":  "MeetingScribe",
    "description":  "Record computer audio with professional-quality audio using WASAPI loopback capture.",
    "icon":  "icon.png",
    "author":  "Arthurhrk",
    "license":  "MIT",
    "version":  "1.0.0",
    "categories":  [
                       "Productivity",
                       "Media"
                   ],
    "commands":  [
                     {
                         "name":  "record",
                         "title":  "Start Recording",
                         "subtitle":  "record audio",
                         "description":  "Record computer audio with high quality",
                         "mode":  "view",
                         "keywords":  [
                                          "record",
                                          "audio",
                                          "wasapi"
                                      ]
                     },
                      {
                         "name":  "recording-status",
                         "title":  "Recording Status",
                         "subtitle":  "MeetingScribe",
                         "description":  "Monitor active recordings in real-time",
                         "mode":  "view",
                         "keywords":  [
                                          "recording",
                                          "status",
                                          "monitor",
                                          "active",
                                          "progress"
                                      ]
                     },
                     {
                         "name":  "recent",
                         "title":  "Recent Recordings",
                         "subtitle":  "MeetingScribe",
                         "description":  "View and manage recent recordings",
                         "mode":  "view",
                         "keywords":  [
                                          "recent",
                                          "recordings",
                                          "history",
                                          "files"
                                      ]
                     },
                     {
                         "name":  "transcription-progress",
                         "title":  "Transcription Progress",
                         "subtitle":  "MeetingScribe",
                         "description":  "Monitor active transcriptions in real-time",
                         "mode":  "view",
                         "keywords":  [
                                          "transcript",
                                          "transcription",
                                          "progress",
                                          "monitor",
                                          "gemini",
                                          "status"
                                      ]
                     }
                 ],
    "preferences":  [
                        {
                            "name":  "pythonPath",
                            "title":  "Python Path",
                            "description":  "Path to Python executable (e.g., .venv/Scripts/python.exe)",
                            "type":  "textfield",
                            "default":  ".venv/Scripts/python.exe",
                            "required":  true,
                            "placeholder":  ".venv/Scripts/python.exe"
                        },
                        {
                            "name":  "projectPath",
                            "title":  "Project Path",
                            "description":  "Full path to the MeetingScribe project directory",
                            "type":  "textfield",
                            "default":  "",
                            "required":  true,
                            "placeholder":  "C:/Users/username/meetingscribe"
                        },
                        {
                            "name":  "geminiApiKey",
                            "title":  "Google Gemini API Key",
                            "description":  "API key for Google Gemini transcription service (optional - get from https://makersuite.google.com/app/apikey)",
                            "type":  "password",
                            "default":  "",
                            "required":  false,
                            "placeholder":  "Enter your Gemini API key"
                        },
                        {
                            "name":  "geminiModel",
                            "title":  "Gemini Model",
                            "description":  "Choose which Gemini model to use for transcription",
                            "type":  "dropdown",
                            "default":  "models/gemini-2.0-flash-exp",
                            "required":  false,
                            "data":  [
                                         {
                                             "title":  "Gemini 2.0 Flash (Faster, Cheaper)",
                                             "value":  "models/gemini-2.0-flash-exp"
                                         },
                                         {
                                             "title":  "Gemini 1.5 Pro (More Accurate)",
                                             "value":  "models/gemini-1.5-pro"
                                         }
                                     ]
                        },
                        {
                            "name":  "audioFormat",
                            "title":  "Audio Format",
                            "description":  "Choose the audio format for recording (WAV is uncompressed, M4A is compressed)",
                            "type":  "dropdown",
                            "default":  "wav",
                            "required":  false,
                            "data":  [
                                         {
                                             "title":  "WAV (Uncompressed)",
                                             "value":  "wav"
                                         },
                                         {
                                             "title":  "M4A (Compressed)",
                                             "value":  "m4a"
                                         }
                                     ]
                        },
                        {
                            "name":  "optimizeAudio",
                            "title":  "Optimize Audio Before Upload",
                            "description":  "Reduce audio file size before uploading (converts to 16kHz mono WAV). Requires ffmpeg for non-WAV files.",
                            "type":  "checkbox",
                            "default":  false,
                            "required":  false,
                            "label":  "Enable Audio Optimization"
                        }
                    ],
    "dependencies":  {
                         "@raycast/api":  "^1.78.0"
                     },
    "devDependencies":  {
                            "@raycast/eslint-config":  "^1.0.6",
                            "eslint":  "^8.51.0",
                            "prettier":  "^3.0.3",
                            "typescript":  "^5.2.2"
                        },
    "scripts":  {
                    "build":  "ray build -e dist",
                    "dev":  "ray develop",
                    "fix-lint":  "ray lint --fix",
                    "lint":  "ray lint",
                    "publish":  "npx @raycast/api@latest publish"
                }
}
